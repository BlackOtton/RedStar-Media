    	{
      	function        	= BOX
      	state           		= NORMAL
				file										="button_toolbar0.png"   
      	border          	= { 4, 4, 4, 4 }
   		}

    image
      {
        function        	= BOX
        state           		= PRELIGHT
        shadow					= OUT
				file										="button_toolbar1.png"        
        border          	= { 4, 4, 4, 4 }
      }
      
			image
      {
        function        	= BOX
        state           		= PRELIGHT
        shadow					= IN
				file										="button_toolbar3.png"        
        border          	= { 4, 4, 4, 4 }
      }
   		
    image
    	{
      	function       		= BOX
      	state           		=ACTIVE
				file										="button_toolbar2.png"   
      	border          	= { 4, 4, 4, 4 }
   		} 
	}
}

