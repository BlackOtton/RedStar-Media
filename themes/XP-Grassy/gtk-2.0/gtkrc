# Drawing a focus to the Entries

style "entry"
{
	
	GtkWidget::interior_focus = 0
	#GtkWidget::focus-line-width=0
	
	xthickness	=	2
	ythickness	=	1
	GtkWidget::focus_padding 						= 0
	
	
  engine "pixmap" 
  {

    image 
		{
			function       				= SHADOW
			recolorable     		= TRUE
			shadow							= IN
			file            						= "in.png"
			border								= { 1,1,1,1 }
			stretch         				= TRUE
		}  

    image 
   	{
			function        				= FOCUS
			recolorable    	 		= TRUE
			overlay_file    			= "entry_focus.png"
			overlay_border		= { 1,1,1,1 }
			overlay_stretch		= TRUE
   	}
	}
}

